{
	"name": "nuxt-creative-travel",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"dev:mock": "cross-env USE_MOCK=1 concurrently -n NUXT,PRISM -c cyan,green \"npx nuxi dev\" \"npx @stoplight/prism-cli mock ./server/openapi.yaml -p 4010 --cors\"",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"lint": "eslint \"**/*.{js,ts,vue}\" && stylelint \"**/*.{css,scss,vue}\" && npx @redocly/cli lint server/openapi.yaml",
		"lint:openapi": "npx @redocly/cli lint server/openapi.yaml",
		"lint:styles": "stylelint \"**/*.{css,scss,vue}\"",
		"lint:styles:fix": "stylelint \"**/*.{css,scss,vue}\" --fix",
		"lint:scripts": "eslint \"**/*.{js,ts,vue}\"",
		"lint:scripts:fix": "eslint \"**/*.{js,ts,vue}\" --fix",
		"format": "prettier --check \"**/*.{js,ts,vue,css,scss,json,md}\"",
		"format:fix": "prettier --write \"**/*.{js,ts,vue,css,scss,json,md}\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@nuxt/icon": "^2.1.0",
		"@pinia/nuxt": "^0.11.3",
		"gsap": "^3.14.1",
		"isomorphic-dompurify": "^2.34.0",
		"lodash.debounce": "^4.0.8",
		"nuxt": "^4.2.1",
		"pinia": "^3.0.4",
		"swagger-ui-dist": "^5.30.3",
		"vue": "^3.5.25",
		"vue-dompurify-html": "^5.3.0",
		"vue-router": "^4.6.3",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@nuxt/eslint": "^1.11.0",
		"@stoplight/prism-cli": "^5.14.2",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/lodash.debounce": "^4.0.9",
		"@types/node": "^24.10.1",
		"@types/swagger-ui-dist": "^3.30.6",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"postcss-html": "^1.8.0",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.7.4",
		"sass": "^1.94.2",
		"sass-loader": "^16.0.6",
		"stylelint": "^16.26.1",
		"stylelint-config-recommended-vue": "^1.6.1",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-prettier": "^5.0.3",
		"vite-plugin-checker": "^0.11.0"
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --fix",
		"*.{css,scss,vue}": "stylelint --fix",
		"*.{js,ts,vue,css,scss,json,md}": "prettier --write",
		"server/openapi.yaml": "npx @redocly/cli lint server/openapi.yaml"
	}
}
